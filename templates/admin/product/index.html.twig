{% extends 'admin/base.html.twig' %}

{% block title %}Tedie Panel - Produkty{% endblock %}

{% block body %}
    <h1>Produkty</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nazwa</th>
                <th>Czy jest nowy?</th>
                <th>Czy jest popularny?</th>
                <th>Allegro Url</th>
                <th>Działania</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.getDisplayName }}</td>
                <td>{{ product.isNew ? 'Tak' : 'Nie' }}</td>
                <td>{{ product.isTop ? 'Tak' : 'Nie' }}</td>
                <td>
                    {% if product.allegroUrl %}
                    <a href="{{ product.allegroUrl }}" target="_blank">{{ product.allegroUrl }}</a>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_product_show', {'id': product.id}) }}">Detale</a>
                    <a class="btn btn-warning" href="{{ path('app_admin_product_edit', {'id': product.id}) }}">Edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Brak rekordów</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_admin_product_new') }}">Stwórz nowy</a>
{% endblock %}
