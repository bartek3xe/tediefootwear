{% extends 'admin/base.html.twig' %}

{% block title %}Tedie Panel - Produkty{% endblock %}

{% block body %}
    {% set suffix = 'product' %}
    {% set per_page = 8 %}
    <div class="card mt-2">
        <div class="card-header d-flex justify-content-between">
            <h1>Produkty</h1>
            <div class="btn-container d-flex gap-1">
                <a class="btn btn-danger d-flex align-items-center d-none delete-btn" href="javascript:void(0);">Usuń wybrane</a>
                <a class="btn btn-success d-flex align-items-center" href="{{ path('app_admin_product_new') }}">Stwórz nowy</a>
            </div>

        </div>
        <div class="card-body">
            <table class="table table-responsive table-striped table-hover product-list-js" id="entityListId"
                   data-field-values="{{ list_fields }}"
                   data-api-url="/api/products"
                   data-default-url="/admin/product/"
                   data-items-per-page="{{ per_page }}"
                   data-suffix="{{ suffix }}">
                <thead class="table-light">
                <tr>
                    <th style="width: 50px;">
                        <div class="form-check">
                            <input id="selectAllCheckbox" class="form-check-input" type="checkbox">
                        </div>
                    </th>
                    <th class="sort" data-sort-column="id">Id</th>
                    <th class="sort" data-sort-column="name">Nazwa</th>
                    <th class="sort" data-sort-column="is_new">Czy jest nowy?</th>
                    <th class="sort" data-sort-column="is_top">Czy jest popularny?</th>
                    <th class="sort" data-sort-column="allegro_url">Allegro Link</th>
                    <th class="sort" data-sort-column="etsy_url">Etsy Link</th>
                </tr>
                </thead>
                <tbody class="list-class form-check-all">
                <tr>
                    <th scope="row">
                        <div class="form-check">
                            <input class="form-check-input {{ suffix }}-checkbox" type="checkbox" name="chk_child" value="">
                        </div>
                    </th>
                    <td class="text-nowrap align-middle id"></td>
                    <td class="text-nowrap align-middle name"></td>
                    <td class="text-nowrap align-middle new"></td>
                    <td class="text-nowrap align-middle top"></td>
                    <td class="text-nowrap align-middle allegro_url"></td>
                    <td class="text-nowrap align-middle etsy_url"></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <nav aria-label="Page navigation">
                <ul class="pagination-container"></ul>
            </nav>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('js/list') }}
{% endblock %}
